@page
@model TagHelpers.Pages.DemoModel
@{
    ViewData["Title"] = "Demo";
}

<form method="post">
    <div class="form-check pb-3">
        <input class="form-check-input" type="checkbox" asp-for="Boolean">
        <label class="form-check-label" asp-for="Boolean">
            Checkbox entry
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Int">Number entry</label>
        <input class="form-control" asp-for="Int">
    </div>
    <div class="form-group">
        <label asp-for="DateTime">Date entry</label>
        <input class="form-control" asp-for="DateTime">
    </div>
</form>