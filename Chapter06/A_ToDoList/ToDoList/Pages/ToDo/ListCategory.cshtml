@page "{category}/{username}"
@model ToDoList.Pages.ToDo.ListCategoryModel
@{
    ViewData["Title"] = "All tasks";
}

<div class="row">
    <div class="col-md-12">
        <h2>Tasks</h2>
    </div>
    <div class="col-md-6">
        <ul>
            @foreach (var item in Model.Tasks)
            {
                <li>@item.Description</li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Category</dt>
            <dd>@Model.Input.Category</dd>
            <dt>Username</dt>
            <dd>@Model.Input.Username</dd>
        </dl>
    </div>
</div>
